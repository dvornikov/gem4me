extends layout.pug
block content
  include errors.pug
        
  form(action="login", method="post")
    div.form-group
      label Имя пользователя
      input.form-control(type="text", name="username", value=username)
    div.form-group
      label Пароль
      input.form-control(type="password", name="password")
    button.btn.btn-default(type="submit") Войти
