extends layout.pug
block content
  if errors 
    ul
      for error in errors
        li.alert.alert-danger!= error.msg
      
  form(action="register", method="post")
    div.form-group
      label Логин cпонсора
      input.form-control(type="text", name="sponsor", value="testareg1")
    div.form-group
      label Логин
      input.form-control(type="text", name="username")
    div.form-group
      label E-mail
      input.form-control(type="text", name="email")
    div.form-group
      label Имя
      input.form-control(type="text", name="firstName")
    div.form-group
      label Фамилия
      input.form-control(type="text", name="secondName")
    div.form-group
      label Номер телефона
      input.form-control(type="text", name="phone")
    div.form-group
      label Страна
      select.form-control(name="country")
        option(value="ru", selected=true) Россия
        option(value="us") США
        option(value="uk") Великобритания
    div.form-group
      label Пароль
      input.form-control(type="password", name="password")
    div.form-group
      label Финансовый пароль
      input.form-control(type="password", name="finPassword")
    div.form-group
      label Skype
      input.form-control(type="text", name="skype")
    button.btn.btn-default(type="submit") Регистрация
